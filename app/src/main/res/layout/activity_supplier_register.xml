<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/city"
    tools:context="Activities.ClientRegister"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/SignUp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/alfa_slab_one"
                android:gravity="center"
                android:text="Register"
                android:textSize="36sp" />

            <EditText
                android:id="@+id/GmachNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Enter your gmach name" />

            <EditText
                android:id="@+id/EmailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text="Enter Email" />

            <EditText
                android:id="@+id/PasswordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="textPassword"
                android:text="Enter Password" />

            <EditText
                android:id="@+id/PhoneNumberInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:ems="10"
                android:inputType="phone"
                android:text="Enter Phone Number" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="Choose the category of your gmach"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/CategoryInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="Choose the location in the country"
                android:textAllCaps="false"
                android:textSize="16sp" />

            <Spinner
                android:id="@+id/LocationInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/AddressInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Enter Address" />

            <EditText
                android:id="@+id/OpeningTimeInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Enter opening time" />

            <ImageView
                android:id="@+id/suppImg"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:srcCompat="@tools:sample/avatars" />

            <Button
                android:id="@+id/uploadImg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Upload Image"
                app:icon="@android:drawable/ic_menu_upload" />

            <Button
                android:id="@+id/signUpSupplier"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:fontFamily="@font/alfa_slab_one"
                android:text="sign_up" />

            <Button
                android:id="@+id/LoginRegist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have an Account? Sign In"
                android:textSize="14sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>