<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="Activities.ProductDetails">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="163dp"
        android:layout_height="24dp"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/architects_daughter"
        android:text="time to burrow(in days)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/punits"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/pname"
        android:layout_width="257dp"
        android:layout_height="65dp"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:inputType="textPersonName"
        android:paddingLeft="80px"
        android:text="Product Name"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pImg"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/pdesc"
        android:layout_width="323dp"
        android:layout_height="50dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="260dp"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:singleLine="false"
        android:text="no description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/punits"
        android:layout_width="229dp"
        android:layout_height="42dp"
        android:layout_marginTop="3dp"
        android:ems="10"
        android:fontFamily="@font/architects_daughter"
        android:inputType="number"
        android:paddingLeft="50px"
        android:paddingRight="50px"
        android:text="Units in stock"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="159dp"
        android:layout_height="17dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/architects_daughter"
        android:text="description:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pname"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="102dp"
        android:layout_height="19dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/architects_daughter"
        android:text="units in stock:"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdesc"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/pburrowTime"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:fontFamily="@font/architects_daughter"
        android:text="time to burrow(in days)"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/pImg"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>